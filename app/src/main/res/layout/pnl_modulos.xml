                android:layout_margin="@dimen/button_icon_margin"
                android:src="@drawable/icon_chevron_right_blue" />


        </LinearLayout>

        <View style="@style/Divider_Horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optusuario"
        android:layout_width="match_parent"
