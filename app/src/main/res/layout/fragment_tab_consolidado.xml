<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdn.slp.lecturalibre.TabConsolidado">

    <RelativeLayout
        android:id="@+id/p12_pnlinfoOrden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:drawable/editbox_background_normal"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/p12_lblLbsSolicitadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="LBS ESCANEADAS:"
            android:textColor="@color/zebra_blue"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p12_txtLbseEscaneadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p12_lblLbsSolicitadas"
            tools:text="ESCANEADO: "
            android:textColor="@color/colorGreed"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p12_lblkgsSolicitadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p12_txtLbseEscaneadas"
            android:textColor="@color/zebra_blue"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="LBS ESCANEADAS:" />

        <TextView
            android:id="@+id/p12_txtkbsEscaneadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p12_lblkgsSolicitadas"
            tools:text="ESCANEADO: "
            android:textColor="@color/colorGreed"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.evrencoskun.tableview.TableView
        android:id="@+id/p12_tblconsolidado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/p12_pnlinfoOrden"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:drawable/editbox_background"
        app:selected_color="@color/table_view_default_selected_background_color"
        app:shadow_color="@color/table_view_default_selected_background_color">
        <!--  -->

    </com.evrencoskun.tableview.TableView>


</RelativeLayout>